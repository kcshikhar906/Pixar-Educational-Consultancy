rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to get the user's role and name from the 'counselors' collection.
    // This makes rules cleaner and easier to read.
    function getUserData(userId) {
      return get(/databases/$(database)/documents/counselors/$(userId)).data;
    }

    // Allow any authenticated user to read their own profile to get their role and name.
    match /counselors/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for the 'students' collection
    match /students/{studentId} {
      
      // RULE FOR ADMINS:
      // Admins can perform any action (read, write, create, delete) on any student document.
      allow read, write: if getUserData(request.auth.uid).role == 'admin';

      // RULE FOR COUNSELORS (Reading single documents):
      // A counselor can read a single student document IF that student is assigned to them.
      allow get: if getUserData(request.auth.uid).role == 'counselor' 
                  && resource.data.assignedTo == getUserData(request.auth.uid).name;
                  
      // RULE FOR COUNSELORS (Updating single documents):
      // A counselor can update a single student document IF that student is assigned to them.
      allow update: if getUserData(request.auth.uid).role == 'counselor'
                    && resource.data.assignedTo == getUserData(request.auth.uid).name;

      // RULE FOR COUNSELORS (Reading a LIST of documents):
      // This is the most important rule for fixing the current error.
      // A counselor can query the students collection IF the query specifically filters for their own name.
      allow list: if getUserData(request.auth.uid).role == 'counselor'
                   && request.query.where.assignedTo == getUserData(request.auth.uid).name;
    }
  }
}
