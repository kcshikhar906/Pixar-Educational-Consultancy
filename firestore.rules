rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to manage the 'students' collection
    match /students/{studentId} {
      allow read, write: if request.auth != null;
    }

    // Allow anyone to create (submit) a document in the generalInquiries collection.
    // They cannot read, update, or delete entries.
    match /generalInquiries/{inquiryId} {
      allow create: if true;
      allow read, update, delete: if false;
    }
  }
}
