
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if a user has a specific role
    function isRole(role) {
      return exists(/databases/$(database)/documents/counselors/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/counselors/$(request.auth.uid)).data.role == role;
    }

    // Helper function to get the name of the logged-in counselor
    function getCounselorName() {
      return get(/databases/$(database)/documents/counselors/$(request.auth.uid)).data.name;
    }

    // Rules for the 'students' collection
    match /students/{studentId} {
      // Admins can read, write, create, and delete any student document.
      allow read, write: if isRole('admin');
      
      // Counselors can get/read a specific student document.
      allow get: if isRole('counselor');

      // Counselors can update a student document ONLY IF it is assigned to them.
      allow update: if isRole('counselor') && resource.data.assignedTo == getCounselorName();

      // Allow counselors to list students, enabling both the dashboard view and the search functionality.
      allow list: if isRole('counselor') && request.query.where.assignedTo == getCounselorName();
    }

    // Rules for the 'counselors' collection
    match /counselors/{counselorId} {
      // An admin can access any counselor document.
      allow read, write: if isRole('admin');
      
      // A counselor can read their OWN document to verify their role and name.
      allow get: if isRole('counselor') && request.auth.uid == counselorId;
    }

    // Rules for other collections (e.g., display, metrics)
    // Allow read for any authenticated user (admin or counselor).
    // Allow write only for admins.
    match /{collection}/{docId} {
        allow read: if request.auth != null;
        allow write: if isRole('admin');
    }
  }
}
